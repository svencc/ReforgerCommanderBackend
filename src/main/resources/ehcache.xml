<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!--<persistence directory="${java.io.tmpdir}" />-->

    <cache-template name="recomDefaultCache">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
<!--            <disk persistent="false"></disk>-->
            <!--<offheap unit="MB">100</offheap>-->
        </resources>
    </cache-template>

    <cache alias="MapMetaDataService.provideMapList" uses-template="recomDefaultCache">
    </cache>

    <cache alias="MapEntityPersistenceLayer.findAllTownBuildingEntities" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.findAllTownEntities" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.generateClusters" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.findAllMapNames" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.countEntitiesByMapName" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.utilizedClassesByMapName" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.utilizedResourcesByMapName" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.utilizedPrefabsByMapName" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.utilizedNamedEntitiesByMapName" uses-template="recomDefaultCache">
    </cache>
    <cache alias="MapEntityPersistenceLayer.utilizedMapMetaTypeByMapName" uses-template="recomDefaultCache">
    </cache>

</config>
