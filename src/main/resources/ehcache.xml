<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!--<persistence directory="${java.io.tmpdir}" />-->

    <cache-template name="refComDefaultCache">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <disk persistent="false"></disk>
            <!--<offheap unit="MB">100</offheap>-->
        </resources>
    </cache-template>

    <cache alias="MapEntityPersistenceLayer.findAllTownBuildingEntities" uses-template="refComDefaultCache">
    </cache>

    <cache alias="MapEntityPersistenceLayer.findAllTownEntities" uses-template="refComDefaultCache">
    </cache>

</config>
