<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.10.xsd"
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <!-- https://blog.coffeebeans.at/archives/1356 -->


    <!-- DEFAULTS -->
    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>
    <!-- DEFAULTS -->



    <!-- Persistent cache directory -->
    <persistence directory="${user.home}/RECOMBackend/ehcache-spring"/>
    <!-- Persistent cache directory -->



    <!-- CACHE TEMPLATES -->
    <cache-template name="infiniteHeap">
        <resources>
            <heap unit="entries">9223372036854775807</heap>
        </resources>
    </cache-template>
    <cache-template name="applicationCache">
<!--        <expiry><none/></expiry>-->
        <expiry>
            <ttl unit="hours">876000</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>com.recom.service.EHCacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap unit="entries">1000</heap>
            <!-- <offheap unit="MB">10</offheap> -->
            <disk persistent="true" unit="MB">1000</disk>
        </resources>
    </cache-template>
    <!-- CACHE TEMPLATES -->



    <!-- APPLICATION CACHE -->
     <cache alias="com.recom.service.cache.ApplicationCacheTester.testWithoutKey" uses-template="applicationCache">
     </cache>
     <cache alias="com.recom.service.cache.ApplicationCacheTester.testWithOneKey" uses-template="applicationCache">
     </cache>
     <cache alias="com.recom.service.cache.ApplicationCacheTester.testWithMultipleKeys" uses-template="applicationCache">
     </cache>
    <!-- APPLICATION CACHE -->





</config>
